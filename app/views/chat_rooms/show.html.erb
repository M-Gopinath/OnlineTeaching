<div class="container">
  <div class="col-sm-10 col-sm-offset-1">
    <h3 class="title-h"><%= @chat_room.title %></h3>

    <div id="messages" data-chat-room-id="<%= @chat_room.id %>">
      <%= render @chat_room.chat_messages.where(parent_id: nil) %>
    </div>

    <%= form_for @message, url: '#' do |f| %>
      <%= f.hidden_field :parent_id, value: nil %>
      <div class="row reply">
        <div class="reply-main">
          <div class="form-group">
            <%= f.text_area :body, class: 'form-control ch-mess-body', placeholder:"What's on your mind?" %>
          </div>
        </div>
        <div class="reply-send">
          <small class="text-muted">From 2 to 1000 characters</small>
          <%= f.submit "Post", class: 'btn btn-space btn-primary btn-lg post-message' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
