<div class=" be-login be-signup">
  <div class="be-content">
    <div class="main-content container-fluid">
      <div class="splash-container sign-up">
        <div class="card card-border-color card-border-color-primary">
          <div class="card-header">
            <%= image_tag 'logo-1.png', class: 'logo-img', alt: 'logo', width: '140px'%>
          </div>
          <div class="card-body">
            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), :remote => true) do |f| %>
              <%#= f.error_notification %>
              <span class="splash-description">Please enter your user information.</span>
              <span class="splash-title pb-4">Sign Up</span>
              <div class="row">
                <div class="col-md-12">
                  <div class="form-group">
                    <%= f.select :role_id, options_for_select(Role.where.not(:id => 1).map { |r| [r.name, r.id] }), {include_blank: false, allow_blank: false},{ class: "form-control",prompt: "Select Role" } %>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-sm-6">
                  <div class="form-group">
                    <%= f.text_field :first_name, class: "form-control", autofocus: true, placeholder: "First Name" %>
                  </div>
                </div>
                <div class="col-sm-6">
                  <div class="form-group">
                    <%= f.text_field :last_name, class: "form-control", placeholder: "Last Name"%>
                  </div>
                </div>
              </div>
              
              <div class="row">
                <div class="col-md-12">
                  <div class="form-group">
                    <%= f.text_field :email, class: "form-control", placeholder: "Email"%>
                  </div >
                </div>
              </div>

              <div class="row">
                <div class="col-md-12">
                  <div class="form-group">
                     <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col-md-12">
                 <div class="form-group">
                  <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm Password" %>
                  <span id='message'></span>
                </div>
                </div>
              </div>

              <div class="row">
                <div class="col-md-12">
                  <div class="form-group">
                     <label class="checkbox-container cus-chec-conta">By creating an account, you agree the <a href="#">terms and conditions</a>.
                      <input type="checkbox">
                      <span class="checkmark"></span>
                    </label>
                  </div>
                </div>
              </div>
                

              <div class="form-group pt-2">
                <button class="btn btn-block btn-primary btn-xl new-registraion-form" type="submit"> Sign Up</button>

              </div>
            <%end%>
            <!-- <div class="form-group">
              <span class="alreay-account"> Already have an account?</span>
              <span class="login-a"> <%#= link_to "Login Now", new_user_session_path %></span>
            </div> -->
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

