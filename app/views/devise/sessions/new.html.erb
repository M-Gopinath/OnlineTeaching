<div class="be-login">
  <div class="be-content">
    <div class="main-content container-fluid">
      <div class="splash-container splash-login-container">
        <div class="card card-border-color card-border-color-primary">
          <div class="card-header">
            <%= image_tag 'logo-1.png', class: 'logo-img', alt: 'logo', width: '140px'%>
          </div>
          <div class="card-body">
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), :remote => true) do |f| %>
              <p class="user-not-found email-pass-erro"></p>
              <span class="splash-description">Please enter your user information.</span>
              <span class="splash-title">Sign In</span>
              <p class="pb-4"></p>
              <div class="form-group">
               <%= f.text_field :email, class: "form-control valid-user-email", placeholder: "Email", autofocus: true, autocomplete: false %>
              </div>
              <div class="form-group">
                <%= f.password_field :password, class: "form-control", placeholder: "Password", autocomplete: false %>
              </div>
              <div class="information-text">
                <div class="row">
                  <div class="col-sm-6 col-xs-6 col-lg-6 col-md-6">
                    <label class="checkbox-container">Keep me logged in
                      <input type="checkbox">
                      <span class="checkmark"></span>
                    </label>
                  </div>
                  <div class="col-sm-6 col-xs-6 col-lg-6 col-md-6">
                    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                      <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'forgot-password-a' %>
                    <% end -%>
                  </div>
                </div>
              </div>
              <div class="form-group">
                <%= f.button :submit, "Sign me in", class: "btn btn-block btn-primary btn-xl login-submit" %>
              </div>
            <%end%>
          </div>
        </div>
        <div class="splash-footer"><span>Don't have an account? <%= link_to "Sign up now", new_user_registration_path, class: "signin-link-a"%></span></div>
      </div>
    </div>
  </div>
</div>


