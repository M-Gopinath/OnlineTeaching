<div class="container">
  <div class="col-md-4">
    <%= link_to "Back to Event", events_path, class: "btn btn-primary" %>
  </div>
  <div class="col-md-8">
    <h3>New Event Group</h3>
    <%= form_for @group, url: event_attendee_groups_path, method: :post do |f| %>
      <div class="form-group">
        <label>Select Option</label>
        <%= select_tag :user_option, options_for_select(enrolled_course_users), class: "form-control", prompt: "Select", required: true %>
      </div>
      <div class="form-group enrolled-users hide">
        <label>Course</label>
        <%= select_tag :courses, options_for_select(@courses.map{|name| [name, name]}), class: "form-control", prompt: "Select Course" %>
      </div>
      <div class="all-users-event hide">
        <%= check_box_tag :select_deselect, true, true, "data-select": "all-user" %>
        <label>Select All/Deselect All</label>
        <div class="row" class="all-users-check-list">
          <h4>Teachers</h4>
          <% if @teachers.present? %>
            <% @teachers.each do |teacher| %>
              <div class="col-md-4">
                <p>
                  <%= check_box_tag "user_id[]", teacher.id, true, class: "all-user-check" %>
                  <label><%= teacher.full_name %></label>
                </p>
              </div>
            <% end %>
          <% else %>
            <p>No Teachers Found</p>
          <% end %>
        </div>
        <div class="row">
          <h4>Students</h4>
          <% if @students.present? %>
            <% @students.each do |student| %>
              <div class="col-md-4">
                <p>
                  <%= check_box_tag "user_id[]", student.id, true, class: "all-user-check" %>
                  <label><%= student.full_name %></label>    
                </p>
              </div>
            <% end %>
          <% else %>
            <p>No Students Found</p>
          <% end %>
        </div>
      </div>
      <div class="all-teachers-event hide">
        <%= check_box_tag :select_deselect, true, true, "data-select": "all-teacher" %>
        <label>Select All/Deselect All</label>
        <div class="row">
          <h4>Teachers</h4>
          <% if @teachers.present? %>
            <% @teachers.each do |teacher| %>
              <div class="col-md-4">
                <p>
                  <%= check_box_tag "user_id[]", teacher.id, true, class: "all-teach-check" %>
                  <label><%= teacher.full_name %></label>
                </p>
              </div>
            <% end %>
          <% else %>
            <p>No Teachers Found</p>
          <% end %>
        </div>
      </div>
      <div class="all-students-event hide">
        <%= check_box_tag :select_deselect, true, true, "data-select": "all-student" %>
        <label>Select All/Deselect All</label>
        <div class="row">
          <h4>Students</h4>
          <% if @students.present? %>
            <% @students.each do |student| %>
              <div class="col-md-4">
                <p>
                  <%= check_box_tag "user_id[]", student.id, true, class: "all-stud-check" %>
                  <label><%= student.full_name %></label>
                </p>
              </div>
            <% end %>
          <% else %>
            <p>No Students Found</p>
          <% end %>
        </div>
      </div>
      <div class="event-enrolled-users">

      </div>
      <div class="form-group">
        <label>Name</label>
        <%= f.text_field :name, class: "form-control", required: true %>
      </div>
      <div class="form-group">
        <label>Description</label>
        <%= f.text_area :description, class: "form-control", rows: 5 %>
      </div>
      <div class="form-group">
        <%= f.check_box :is_active %>
        <label>Is Active</label>
      </div>
      <div class="form-actions">
        <%= f.submit "Create", class: "btn btn-default" %>
      </div>
    <% end %>
  </div>
</div>
