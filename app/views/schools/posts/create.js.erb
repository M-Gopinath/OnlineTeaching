<% if @create_post.parent_id.present? %>
  $(".reply-post-<%= @create_post.parent_id %>").append("<%= j(render partial: 'posts/post', locals: {post: @create_post}) %>");
  $(".reply-post-form").hide();
  $(".reply-post-box").val("");
<% else %>
  $(".top-post-box").val("");
  $("#user-posts").prepend("<%= j(render partial: 'posts/post', locals: {post: @create_post}) %>");
<% end %>

