<div class="box-header with-border"> 
  <h4>New Message</h4>
</div>
<div class='modal_loading'><img src="/assets/ajax_loader.gif" alt=""></div>
<%= form_for :conversation, url: schools_conversations_path, html: { class: "", id: "conversations-form", remote: true } do |f| %>
  <div class="form-group">
    <%= f.label :recipients %>
    <%= f.select(:recipients, User.all.collect {|p| [ p.email, p.id ] }, {include_blank: true}, { multiple: true , class: "form-control chosen-select " })%>
  </div>
  <div class="form-group">
    <%= f.label :subject %>
    <%= f.text_field :subject, placeholder: "Subject", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :message %>
    <%= f.text_area :body, class: 'form-control',placeholder: "Type your message here", rows: 10, id: 'compose-textarea'  %>
  </div>
  <div class="file-uploader__message-area">
    <p>Select a file to upload</p>
  </div>
  
  <div class="row">
    <div class="col-sm-2 em-cus-2">
      <%= f.submit "Send Message", class: "btn btn-space btn-primary  send-message" %>
    </div>
    <div class="col-sm-10 em-cus-10">
      <ul class="list-inline">
        <li class="font-format"><img src="https://img.icons8.com/material/20/cccccc/text-color.png"></li>
        <li>
          <div class="file-chooser">
            <label for="upload" class="file-upload__label"><img src="https://img.icons8.com/material/22/cccccc/attach.png"></label>
            <input class="file-chooser__input" type="file">
          </div>
        </li>
      </ul>
    </div>
  </div>
<% end %>


<script>
  $(function () {
    $("#compose-textarea").wysihtml5();
  });
</script>

