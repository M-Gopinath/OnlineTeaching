<tr>
  <td width="20%" class="mail-contact"><%= conversation.originator.full_name %></td>
  <td width="50%"><span class="<%= 'not_read' unless conversation.is_read?(current_user) %>"></span><span class="mai-subject"><%= conversation.subject %></span><span><%= truncate conversation.messages.last.body, length: 145 %></span></td>
  <td width="25%" class="mail-date"><%=  conversation.messages.last.created_at.strftime("%A, %b %d, %Y at %I:%M%p") %></td>
  <td width="12%" class="link-to-view"><%= link_to "View", schools_conversation_path(conversation)  %></td>
</tr>
