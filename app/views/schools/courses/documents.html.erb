<div class="container">
  <div class="col-md-2 top-60"></div>
  <div class="col-md-8 top-60">
    <div class="course-doc">
      <h3>Course's Documents</h3>
      <table class="table">
        <thead>
          <tr>
            <th>URL</th>
            <th>Download</th>
          </tr>
        </thead>
        <tbody>
          <% @course.course_images.each do |image| %>
            <tr>
              <td><%= link_to image.image.path, image.image.url, target: "_blank" %></td>
              <td><%= link_to "Download", schools_courses_download_file_path(file: image.image.path) if image.image.path.present? %></td>
            </tr>
          <% end %>
          <% @course.course_attachments.each do |attachment| %>
            <tr>
              <td><%= link_to attachment.attachment.path, attachment.attachment.url, target: "_blank" %></td>
              <td><%= link_to "Download", schools_courses_download_file_path(file: attachment.attachment.path) if attachment.attachment.path.present? %></td>
            </tr>
          <% end %>
          <% @course.course_videos.each do |video| %>
            <tr>
              <td><%= link_to video.video.path, video.video.url, target: "_blank" %></td>
              <td><%= link_to "Download", schools_courses_download_file_path(file: video.video.path) if video.video.path.present? %></td>
            </tr>
          <% end %>
          <% @course.lessons.each do |lesson| %>
            <% if lesson.video_activities.present? %>
              <% lesson.video_activities.each do |va| %>
                <% if va.video.path.present? %>
                  <tr>
                    <td><%= link_to va.video.path, va.video.url, target: "_blank" %></td>
                    <td><%= link_to "Download", schools_courses_download_file_path(file: va.video.path) %></td>
                  </tr>
                <% end %>
              <% end %>
            <% end %>
            <% if lesson.audio_activities.present? %>
              <% lesson.audio_activities.each do |aa| %>
                <% if aa.audio_file.path.present? %>
                  <tr>
                    <td><%= link_to aa.audio_file.path, aa.audio_file.url, target: "_blank" %></td>
                    <td><%= link_to "Download", schools_courses_download_file_path(file: aa.audio_file.path) %></td>
                  </tr>
                <% end %>
              <% end %>
            <% end %>
            <% if lesson.reading_activities.present? %>
              <% lesson.reading_activities.each do |ra| %>
                <% if ra.documents.path.present? %>
                  <tr>
                    <td><%= link_to ra.documents.path, ra.documents.url, target: "_blank" %></td>
                    <td><%= link_to "Download", schools_courses_download_file_path(file: ra.documents.path) %></td>
                  </tr>
                <% end %>
              <% end %>
            <% end %>
            <% if lesson.presentation_activities.present? %>
              <% lesson.presentation_activities.each do |pa| %>
                <% if pa.slide_file.path.present? %>
                  <tr>
                    <td><%= link_to pa.slide_file.path, pa.slide_file.url, target: "_blank" %></td>
                    <td><%= link_to "Download", schools_courses_download_file_path(file: pa.slide_file.path) %></td>
                  </tr>
                <% end %>
              <% end %>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>