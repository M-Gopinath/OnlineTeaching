<%# course = Course.first %>
<span class="exit-lesson" data-exit-lesson="<%= course.present? ? course.lessons.present? : false %>"></span>
<%= form_for lesson, url: schools_lessons_path, html: {id: "school-setup", class: "form-horizontal" }, multipart: true, remote: true, method: :post do |f| %>
  <%= f.hidden_field :course_id, value: course.try(:id), class: "lesson-course-id" %>
  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <label>lesson title</label>
        <%= f.text_field :name, class: "form-control" %>
        <div class="le-name-validate error-color"></div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <label>what will students learn in this lesson</label>
        <%= f.text_area :description, class: "form-control th-pad-ri-0", rows: 4 %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <label>Lesson start date</label>
        <div class="input-group date" id="lesson-start-datetimepicker">
          <%= f.text_field :start_date,  class: "form-control setup-lesson" %>
          <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
        </div>
        <div class="le-start-validate error-color"></div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <label>Lesson end date</label>
        <div class="input-group date" id="lesson-end-datetimepicker">
          <%= f.text_field :end_date, class: "form-control setup-lesson" %>
          <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
        </div>
          <div class="le-end-validate error-color"></div>
      </div>
    </div>
  </div>
  <div class="form-group">
    <p class="text-right lesson-cr-btn"><%= image_tag "/assets/loading.gif", class: "form_loaders hide" %><button class="btn btn-space btn-primary th-sub-btn new-lesson-btn" type="submit">CREATE LESSON</button></p>
  </div>
<% end %>
