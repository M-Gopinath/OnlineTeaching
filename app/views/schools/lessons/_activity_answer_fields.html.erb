  $("#animate-scroll-essay").animate({ scrollTop: $("#animate-scroll-essay")[0].scrollHeight}, 'slow');
  $("#animate-scroll-page").animate({ scrollTop: $("#animate-scroll-page")[0].scrollHeight}, 'slow');
  $("#animate-scroll-writting").animate({ scrollTop: $("#animate-scroll-writting")[0].scrollHeight}, 'slow');
  $("#animate-scroll-presentattion").animate({ scrollTop: $("#animate-scroll-presentattion")[0].scrollHeight}, 'slow');
  $("#animate-scroll-audio").animate({ scrollTop: $("#animate-scroll-audio")[0].scrollHeight}, 'slow');
  $("#animate-scroll-discussion").animate({ scrollTop: $("#animate-scroll-discussion")[0].scrollHeight}, 'slow');
</script>