  $("#animate-scroll-video").animate({ scrollTop: $("#animate-scroll-video")[0].scrollHeight}, 'slow');
  $("#animate-scroll-document").animate({ scrollTop: $("#animate-scroll-document")[0].scrollHeight}, 'slow');
  $("#animate-scroll-quize").animate({ scrollTop: $("#animate-scroll-quize")[0].scrollHeight}, 'slow');
