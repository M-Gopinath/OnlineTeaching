<!DOCTYPE html>
<html>
<head>
  <title>Basic</title>
  <%= stylesheet_link_tag    "basic/all", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "basic/all", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="be-mega-menu <%= "be-wrapper " if  user_signed_in? %>">
    <% if controller_name != "sessions" && controller_name != "registrations" && controller_name != "confirmations" %>
      <%= render partial: 'layouts/subdomain_navbar' %>
    <% end %>
    <%= yield %>
    <div id='remote_container'></div>
  </div>
</body>
</html>